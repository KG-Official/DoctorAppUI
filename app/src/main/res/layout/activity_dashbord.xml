<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#673AB7"
    tools:context=".DashbordActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:src="@drawable/menu"
                        app:tint="#fff" />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/profile"
                        android:layout_alignParentRight="true"
                        android:elevation="2dp"
                        app:civ_border_color="#000"
                        app:civ_border_width="2dp"/>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Find your Desired Doctor"
                android:textSize="23dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:fontFamily="@font/aclonica"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_style"
                android:drawableRight="@drawable/searchicon"
                android:drawablePadding="5dp"
                android:drawableTint="@color/white"
                android:elevation="30dp"
                android:hint="Search Doctor"
                android:textSize="17dp"
                android:paddingLeft="15dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:fontFamily="@font/aclonica"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="Choose Category"
                android:textSize="19dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:fontFamily="@font/aclonica"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#442183"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingHorizontal="25sp"
                            android:paddingVertical="15dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/heart"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Heart\nsurgery"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:textColor="#ffff"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:fontFamily="@font/aclonica"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#442183"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingHorizontal="25sp"
                            android:paddingVertical="15dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/binoculars"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Eye \n Doctor"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:textColor="#ffff"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:fontFamily="@font/aclonica"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#442183"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingHorizontal="25sp"
                            android:paddingVertical="15dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/teeth"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Teeth\nsDoctor"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:textColor="#ffff"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:fontFamily="@font/aclonica"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#442183"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingHorizontal="25sp"
                            android:paddingVertical="15dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/heart"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Heart\n Doctor"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:textColor="#ffff"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:fontFamily="@font/aclonica"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#442183"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingHorizontal="25sp"
                            android:paddingVertical="15dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/teeth"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Teeth0\n Doctor"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:textColor="#ffff"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:fontFamily="@font/aclonica"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:text="Top Doctor"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/aclonica"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="#442183"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00D0B7B7"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="20dp">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/heart"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dr. Abdul Qadir"
                                android:fontFamily="@font/aclonica"
                                android:gravity="center"
                                android:textSize="18dp"
                                android:textColor="#fff"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/aclonica"
                                android:gravity="center"
                                android:text="Heart Doctor"
                                android:textSize="13dp"
                                android:textColor="#fff"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="#442183"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="#00D0B7B7"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="20dp">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/teeth"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dr. Bilal Tanoli"
                                android:fontFamily="@font/aclonica"
                                android:gravity="center"
                                android:textSize="18dp"
                                android:textColor="#fff"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/aclonica"
                                android:gravity="center"
                                android:text="Teeth Doctor"
                                android:textSize="13dp"
                                android:textColor="#fff"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="#442183"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="#00D0B7B7"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="20dp">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/binoculars"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dr. Qasim Afridi"
                                android:fontFamily="@font/aclonica"
                                android:gravity="center"
                                android:textSize="18dp"
                                android:textColor="#fff"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/aclonica"
                                android:gravity="center"
                                android:text="Eye Doctor"
                                android:textSize="13dp"
                                android:textColor="#fff"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="#442183"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="#00D0B7B7"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="20dp">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/heart"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dr. Kashif Gujar"
                                android:fontFamily="@font/aclonica"
                                android:gravity="center"
                                android:textSize="18dp"
                                android:textColor="#fff"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/aclonica"
                                android:gravity="center"
                                android:text="Heart Doctor"
                                android:textSize="13dp"
                                android:textColor="#fff"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="#442183"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="#00D0B7B7"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="20dp">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/teeth"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dr. Osama Alyan"
                                android:fontFamily="@font/aclonica"
                                android:gravity="center"
                                android:textSize="18dp"
                                android:textColor="#fff"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/aclonica"
                                android:gravity="center"
                                android:text="Teeth Doctor"
                                android:textSize="13dp"
                                android:textColor="#fff"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>















